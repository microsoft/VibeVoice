# VibeVoice environment defaults
# Copy this file to `.env` and adjust values as needed.

# Path to model directory (Hugging Face-style folder with config + weights)
# Example options:
#   models/VibeVoice-1.5B
#   models/VibeVoice-Large
VIBEVOICE_MODEL_PATH=models/VibeVoice-Large

# Device for inference: cuda | mps | cpu
# On Apple Silicon, use mps
VIBEVOICE_DEVICE=mps

# DDPM inference steps (internal; usually keep default)
VIBEVOICE_INFERENCE_STEPS=10

# Whether to share the Gradio app publicly
# Accepts: 1/true/yes/y/on or 0/false/no/n/off
VIBEVOICE_SHARE=false

# Port to run the Gradio server on
VIBEVOICE_PORT=7860
